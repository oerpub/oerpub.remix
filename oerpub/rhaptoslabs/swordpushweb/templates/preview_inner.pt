<html>
<head><title>Preview</title>
    <!-- Aloha editor -->
    <link rel="stylesheet" type="text/css" href="${request.application_url}/aloha/css/aloha.css"> <!-- xhtml workaround --></link>
    <script src="${request.static_url('oerpub.rhaptoslabs.swordpushweb:static/jquery-1.6.4.min.js')}"></script>
    <script type="text/javascript" src="${request.application_url}/aloha/lib/require.js"> <!-- xhtml workaround --></script>
    <script src="${request.static_url('oerpub.rhaptoslabs.swordpushweb:static/aloha-settings.js')}"> <!-- xhtml workaround --></script>
    <script type="text/javascript" src="${request.application_url}/aloha/lib/aloha.js" data-aloha-plugins="common/ui,common/format,common/highlighteditables,common/link"> <!-- xhtml workaround --></script>
    <script type="text/javascript">
        Aloha.ready(function(){
            Aloha.jQuery.get('${body}', function(data){
                Aloha.jQuery('#cnx_main').html(data).aloha();
            });
        });
    </script>
</head>
<body>
<div id="cnx_main">
<div style="text-align: center">Loading preview...</div>
</div>
</html>
