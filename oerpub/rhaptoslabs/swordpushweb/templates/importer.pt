<metal:use use-macro="base">

<metal:script-slot fill-slot="script-slot">
<script type="text/javascript">

    $(document).ready(function(){
    
        $('input#import-submit').click(function(event){
        event.preventDefault();
        $('#import-submit').attr("disabled", true);
        showWaitMessage();
		$('form#importform').submit();	
		
        });
        
        
    });
    
    

</script>
}    
</metal:script-slot>


<metal:workflownav fill-slot="workflownav" />

<tal:body metal:fill-slot="content-slot"
    tal:define="images_url request.static_url('oerpub.rhaptoslabs.swordpushweb:static/images')">
  <div id="ie6-container-wrap">
    <div id="container">
      <div id="content">

        <div id="nav-column-wrap">
          <div id="nav-column">
            <ul>
              <li id="nav-upload" class="selected">
                <a href="" title="Import to SlideShare"><span>Import</span></a>
              </li>
            </ul>

          </div>
        </div>

        <div id="main-column-wrap">
          <div id="main-column">
              <div class="pleasewait" id="upload-wait" style="display: none;">
                Your document is being uploaded to SlideShare . This may take few moments.
              </div>

            <div id="choose-upload">
              <h1>
                Import your Presentations
              </h1>
              
              <ul id="create-new-list">
                <li>
                  
                  ${form.begin(request.route_url('slideshare_importer'), multipart='multipart', id='importform')}
                  ${form.csrf_token()}
                  <div class="upload-form">
                    
                    
                    <input id="importer" name="importer"  type="file" style="background-color:white;width:401px;" accept= "application/msword, application/pdf, application/postscript, application/ppt"/> <br/>
                    <input class="button" id="import-submit" name="form.submitted" value="Import &#187;" type="submit">
                  </div>
                  
                  
                </li>
                <li>
                
                <p tal:condition="oembed">
					<iframe src="http://www.slideshare.net/slideshow/embed_code/${slideshow_id}" width="425" height="355" frameborder="0" marginwidth="0" marginheight="0" scrolling="no" allowfullscreen></iframe>
                </p>
                
                
					<p tal:condition="conversion_flag">
						Slieshow in Queue for Conversion
						<a href="/slideshow_importer?slideshow_id=${slideshow_id}" id="refresh-status">Refresh Status</a>
					</p>

                </li>
                
              </ul>
              
              ${form.end()}
            </div>

          </div>
        </div>
        

      </div>
    </div>
  </div>
  
  <iframe id="login-frame" class="hidden" src="${request.route_url('cnxlogin')}"
      frameborder="0" marginheight="0" marginwidth="0" noresize scrolling="auto">
  </iframe>

</tal:body>

</metal:use>
