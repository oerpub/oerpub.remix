<metal:use use-macro="base">

<metal:script-slot fill-slot="script-slot">
<script type="text/javascript">

    $(document).ready(function(){    	
        $('input#import-submit').click(function(event){
        event.preventDefault();
        $('#import-submit').attr("disabled", true);
        showWaitMessage();
        $('form#importform').submit();	
        });        
    });
    
</script>
}    
</metal:script-slot>


<metal:workflownav fill-slot="workflownav" />

<tal:body metal:fill-slot="content-slot"
    tal:define="images_url request.static_url('oerpub.rhaptoslabs.swordpushweb:static/images')">
  <div id="ie6-container-wrap">
    <div id="container">
      <div id="content">
        <div id="nav-column-wrap">
          <div id="nav-column">
            <ul>
              <li id="nav-upload" class="selected">
                <a href="" title="Import to SlideShare"><span>Import</span></a>
              </li>
            </ul>
          </div>
        </div>
        
        <div id="main-column-wrap">
          <div id="main-column">
            <div class="pleasewait" id="upload-wait" style="display: none;">
              Your document is being uploaded to SlideShare . This may take few moments.
             </div>

            <div id="choose-upload">
              <h1>
                Save your Presentations :                 
              </h1>
              <p class="forminfo">
                Choose one  or both of the following to deposit your presentations and  create a new module. The presentaions will
                be uploaded to Connexions' Slideshare Account  or(and) your personal Google Docs account and to your Connexions account.
                A metadata page will appear once the upload is complete for updating the metadata.
              </p>

              
              <ul id="create-new-list">
                <li>
                    <div class="upload-form" id="choose-importer-box">                        
                        <span class="label-text"><img src="${images_url}/slideshare.jpg"><strong>SlideShare</strong></span>
                        <input type="checkbox" id="import-to-ss" name="importer" value="google"/>
                        <br/><br/>
                        <span class="label-text"><img src="${images_url}/google-docs-22.png"><strong>Google Presentations</strong></span>
                        <input type="checkbox" id="import-to-google" name="importer" value="slideshare"/>
                        <br/><br/><br/><br/>
                        <div class="left"><input class="button" id="choose-importer" value="Proceed to Import &#187;" type="submit"></div>
                        <br/><br/>
                    </div>
                </li>
              
              
                <li id="file-browser">                  
                  ${form.begin(request.route_url('importer'), multipart='multipart', id='importform')}
                  ${form.csrf_token()}
                  <div class="upload-form">          
                    <input id="importer" name="importer"  type="file" style="background-color:white;width:401px;" /> <br/>
                    
                    <input type='hidden' name='upload_to_ss' id='upload-to-ss' value="false">
                    <input type='hidden' name='upload_to_google' id='upload-to-google' value="false">
                    <input class="button" id="import-submit" name="form.submitted" value="Import &#187;" type="submit">
                            
                    <span>
                      <div class="formlabel">Introductory paragraph</div>
                      <div class="forminfo">A small intoduction for the slides</div>
                      <div class="formfield">
                          <textarea name="introductory_paragraphs" rows="6" cols="60"></textarea>
                      </div>
                    </span>
                  </div>   
                </li>
              </ul>
              ${form.end()}
              
              <div id="embed-ss">
                
              </div>

              <div id="conversion-ss">
              </div>         
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <iframe id="login-frame" class="hidden" src="${request.route_url('cnxlogin')}"
      frameborder="0" marginheight="0" marginwidth="0" noresize scrolling="auto">
  </iframe>

</tal:body>

</metal:use>
